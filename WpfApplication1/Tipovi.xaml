<Window x:Class="WpfApplication1.Tipovi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tipovi" Height="321" Width="523" Background="Gainsboro">
    <Grid>
        <DataGrid Height="232" ItemsSource="{Binding Path=ListaTipova}" SelectedItem="{Binding Path=SelectedTip, Mode=OneWay}" IsReadOnly="True" HorizontalAlignment="Left" Name="tabelaTipova" VerticalAlignment="Top" Width="377" />
        <Button Content="Izmeni tip" Height="23" HorizontalAlignment="Left" Margin="399,99,0,0" Name="izmeniTipButton" VerticalAlignment="Top" Width="75" Click="izmeniTipButton_Click" />
        <Button Content="Izbrisi tip" Height="23" HorizontalAlignment="Left" Margin="399,147,0,0" Name="izbrisiTipButton" VerticalAlignment="Top" Width="75" Click="izbrisiTipButton_Click" />
        <Button Content="OK" Height="23" HorizontalAlignment="Left" Margin="219,247,0,0" Name="okButton" VerticalAlignment="Top" Width="75" IsDefault="True" Click="okButton_Click" />
        <Button Content="Odustanak" Height="23" HorizontalAlignment="Left" Margin="399,247,0,0" Name="cancelButton" VerticalAlignment="Top" Width="75" Click="cancelButton_Click" />
    </Grid>
</Window>
